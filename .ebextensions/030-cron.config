files:
  "/etc/cron.d/rakuichi-rakuza.crontab":
    mode: "000644"
    owner: root
    group: root
    encoding: plain
    content: |
      FUEL_ENV=production
      
      # フリマキャンセル待ちユーザ一への通知メール
      #0 8 * * * apache (cd /var/app/current ; /usr/bin/php oil refine send_mail_to_user_waiting_reservation)
      
      # 予約受付開始日を過ぎたフリマの開催状況(event_status)を予約受付中に更新する
      1 0 * * * apache php /var/app/current/oil refine fleamarket_event_reservation_receipt
      
      # 開催日を過ぎたフリマの開催状況(event_status)を開催終了に更新する
      5 0 * * * apache php /var/app/current/oil refine fleamarket_event_close
      
      # メルマガ会員数のレポートの送信
      0 0 * * * apache /var/app/current/bin/mail-magazine-subscriber-report.sh
